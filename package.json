    "@types/js-yaml": "4.0.9",
    "@types/node": "24.10.7",
    "@vercel/ncc": "0.38.4",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "jest": "30.2.0",
    "js-yaml": "4.1.1",
    "prettier": "3.7.4",
    "typescript": "5.9.3"
  }
